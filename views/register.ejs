<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Responsive Registration Form</title>
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- <link rel="stylesheet" href="register.css"> -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
      font-family: Arial, sans-serif;
      box-sizing: border-box;
      background-image: url("../upload/backreg.jpg");
      background-position: center;
      background-repeat: repeat;
      background-size: cover;
    }

    body {
      background-image: url("../upload/backreg.jpg");
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      padding: 60px 15px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding-top: 200px;
    }

    .form-box {
      background: #ffffff;
      padding: 40px 30px;
      border-radius: 10px;
      max-width: 720px;
      margin: auto;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .input-group .form-control {
      border-right: none;
    }

    .input-group-text {
      background-color: #e9ecef;
      border-left: none;
      display: flex;
      align-items: center;
      padding: 0 10px;
    }
    .sendbtn{
     padding-bottom: 10px;
     padding-top: 7px;
    }

    .btn {
      padding: 12px;
      font-size: 16px;
      border-radius: 6px;
      margin-top: 10px;
      width: 220px;
      background-image: linear-gradient(109.6deg, rgba(62,161,219,1) 11.2%, rgba(93,52,236,1) 100.2%);
      color: white;
      border: none;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn:hover {
      transform: scale(1.05);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    #otpSection {
      transition: all 0.3s ease-in-out;
    }

    .input-group .btn {
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
      width: 67px;
  height: 37px;
  margin:
0px;
 
padding-top: 7px;
    }

    .input-group input[type="email"] {
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
    }
  

    #btn{
      margin-top: 0px;
    }
    @media screen and (max-width: 768px) {
      .form-box {
        padding: 30px 20px;
      }
    }

    @media screen and (max-width: 480px) {
      .form-box {
        padding: 25px 15px;
        margin-top: 60px;
      }

      .btn {
        font-size: 14px;
        width: 180px;
      }

      .input-group-text i {
        font-size: 16px;
      }
    }
    .danger{
      width: 600px;
      height: 10px;

     
    }
    .danger p{
      text-align: center;
    }
    @media(max-width:480px){
      .danger{
        margin-bottom: 100px;
      }
    }
  </style>
</head>

<body>
  <div class="danger">
    <% if (messages.error && messages.error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <% messages.error.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }) %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  
    <% if (messages.success && messages.success.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <% messages.success.forEach(function(msg) { %>
          <p><%= msg %></p>
        <% }) %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  </div>
  

  <div class="container">
    <div class="form-box">
      <form class="row g-3 needs-validation" novalidate action="/register" method="POST">
        
        <div class="col-md-6">
          <label for="username" class="form-label">Username</label>
          <div class="input-group">
            <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
            <span class="input-group-text"><i class='bx bxs-user'></i></span>
          </div>
        </div>


        <div class="col-md-6">
          <label for="password" class="form-label">Password</label>
          <div class="input-group">
            <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
            <span class="input-group-text"><i class='bx bxs-lock-alt'></i></span>
          </div>
        </div>

        
        <div class="col-md-6">
          <label for="email" class="form-label">Email</label>
          <div class="input-group">
            <input type="email" class="form-control" id="email" name="email" required placeholder="Email">
            <button class="btn btn-outline-primary" type="button" id="sendOtpBtn" class="sendbtn">Send </button>
          </div>
        </div>

     
        
        <div class="col-md-6" id="otpSection" >
          <label for="otp" class="form-label" >Enter OTP</label>
          <input type="text" class="form-control" id="otp" name="otp" placeholder="Enter OTP">
        </div>


        <div class="col-md-6">
          <label for="branch" class="form-label">Branch</label>
          <select class="form-select" id="branch" name="branch" required>
            <option value="" disabled selected>Select Branch</option>
            <option value="CSE">CSE</option>
            <option value="ISE">ISE</option>
            <option value="ECE">ECE</option>
            <option value="EEE">EEE</option>
            <option value="TELCOM">TELCOM</option>
            <option value="CIVIL">CIVIL</option>
            <option value="AI & ML">AI & ML</option>
          </select>
        </div>

        <div class="col-md-6">
          <label for="admissionYear" class="form-label">Admission Year</label>
          <input type="number" class="form-control" id="admissionYear" name="graduate" placeholder="Admission Year" required>
        </div>

        <div class="col-md-6">
          <label for="role" class="form-label">Role</label>
          <select class="form-select" id="role" name="role" required>
            <option value="" disabled selected>Select Role</option>
            <option value="student">Student</option>
            <option value="alumni">Alumni</option>
          </select>
        </div>

        <div class="col-md-6">
          <label for="usn" class="form-label">USN</label>
          <input type="text" class="form-control" id="usn" name="usn" placeholder="USN" required>
        </div>

        <div class="col-md-6">
          <label for="mobileno" class="form-label">Mobile No</label>
          <input type="text" class="form-control" id="mobileno" name="mobileno" placeholder="Mobile No" required>
        </div>

        <div class="col-md-6">
          <label for="dob" class="form-label">DOB</label>
          <input type="date" class="form-control" id="dob" name="dob" placeholder="DOB" required>
        </div>

        <div class="col-md-12">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="termsCheck" required>
            <label class="form-check-label" for="termsCheck">
              Agree to terms and conditions
            </label>
          </div>
        </div>

        <div class="col-md-12 text-center">
          <button class="btn btn-primary" type="submit">Register</button>
        </div>

        <p class="text-center"><strong>OR</strong></p>

        <div class="col-md-12 text-center" class="lgnbtn" id="btn">
          <a href="/login" class="btn btn-secondary" >Login</a>
        </div>
      </form>
    </div>
  </div>

  <script>
    (() => {
      'use strict';
      const forms = document.querySelectorAll('.needs-validation');
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    })();

    document.getElementById('usn').addEventListener('input', function () {
      this.value = this.value.toUpperCase();
    });

    document.getElementById('sendOtpBtn').addEventListener('click', async function () {
      const email = document.getElementById('email').value;
      if (!email) {
        alert("Please enter a valid email address.");
        return;
      }

      const response = await fetch('/send-otp', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email })
      });

      const result = await response.json();

      if (result.success) {
        alert("OTP sent to your email.");
        document.getElementById('otpSection').style.display = 'block';
      } else {
        alert(result.message || "Failed to send OTP.");
      }
    });
  </script>
</body>
</html>
