<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Login Page</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body style= "  background-image: linear-gradient( 109.6deg,  rgb(131, 178, 206) 11.2%, rgb(135, 112, 218) 100.2% );">
    <!-- Display error messages (if any) -->
<% if (messages.error && messages.error.length > 0) { %>
    <div class="alert alert-danger">
      <%= messages.error %>
    </div>
  <% } %>
  
    <div class="login-container">
        <form id="loginForm" class="login-form" action="/login" method="post" onsubmit="return validateForm()">
            <h1>Login</h1>
            
            <div class="input-box" class="col-md-6">
                <input type="text" id="usn" placeholder="USN" name="usn" required>
                <i class='bx bxs-user'></i>
            </div>
             
            <div class="input-box" class="col-md-6">
                <input type="password" id="password" placeholder="Password" name="password" required oninput="this.value = this.value.toUpperCase()">
                <i class='bx bxs-lock-alt'></i>
            </div>

            <div class="forgot-link">
                <div id="extra_links">
                    <a href="/register" style="color: black;"><p>Create new</p></a>
                    <a href="/forgot-password" style="color: black;"><p>Forgot password?</p></a>
                </div>
            </div>

            <div class="col-md-12 text-center">
                <button type="submit" class="btn w-100" class="btn" id="btn"  style=" font-weight: 600;
    background-image: linear-gradient( 109.6deg,  rgba(62,161,219,1) 11.2%, rgba(93,52,236,1) 100.2% );
    ">Login</button>
            </div>
            
        </form>
    </div>

    <script>
        function validateForm() {
            let usn = document.getElementById("usn").value.trim();
            let password = document.getElementById("password").value.trim();

            if (usn === "" || password === "") {
                alert("Please fill in all fields.");
                return false;
            }
            return true;
        }
        document.getElementById('usn').addEventListener('input', function() {
            this.value = this.value.toUpperCase();
        });
    </script>
</body>
</html>
